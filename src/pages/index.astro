---
import Layout from '../layouts/Layout.astro';
import ExplainerVideo from '../components/ExplainerVideo.astro';

// Icons
const LeafIcon = `<svg xmlns="http://www.w3.org/2000/svg" width="24" height="24" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round"><path d="M11 20A7 7 0 0 1 9.8 6.1C15.5 5 17 4.48 19 2c1 2 2 4.18 5.2 6 1.5 2.3 3 3.7 3 5 0 2.9-2.6 5.6-7.5 7a8 8 0 0 1-5.3 0c-4.9-1.4-7.5-4-7.5-7a8 8 0 0 1-5.3 0C8.4 14.4 11 17.1 11 20Z"/></svg>`;
const WallIcon = `<svg xmlns="http://www.w3.org/2000/svg" width="24" height="24" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round"><path d="M3 3h18v18H3z"/><path d="M21 9H3"/><path d="M21 15H3"/><path d="M12 3v18"/><path d="M12 9h9"/><path d="M3 15h9"/></svg>`;
const SunIcon = `<svg xmlns="http://www.w3.org/2000/svg" width="24" height="24" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round"><circle cx="12" cy="12" r="4"/><path d="M12 2v2"/><path d="M12 20v2"/><path d="m4.93 4.93 1.41 1.41"/><path d="m17.66 17.66 1.41 1.41"/><path d="M2 12h2"/><path d="M20 12h2"/><path d="m6.34 17.66-1.41 1.41"/><path d="m19.07 4.93-1.41 1.41"/></svg>`;
const CheckIcon = `<svg xmlns="http://www.w3.org/2000/svg" width="24" height="24" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round"><polyline points="20 6 9 17 4 12"/></svg>`;



const services = [
    { 
        title: "Supply Only", 
        description: "Premium Corten steel garden edging strips and rings. Available in various heights (100mm, 150mm) and lengths. Perfect for DIY projects.", 
        icon: SunIcon,
        image: "/images/supply_only.webp", 
        link: "/services/supply-only"
    },
    { 
        title: "Supply & Install", 
        description: "Full service installation. We prepare the ground, shape the edging to your design, and install with commercial grade pegs for longevity.", 
        icon: WallIcon,
        image: "/images/install.webp",
        link: "/services/supply-and-install"
    },
    { 
        title: "Custom Curved Edging", 
        description: "Specialist onsite curving. We create flowing, organic lines that define your garden beds. No pre-formed rings, just perfect custom curves.", 
        icon: LeafIcon, 
        image: "/images/curved.webp",
        link: "/services/custom-curved-edging"
    },
    { 
        title: "Garden Design Consult", 
        description: "Not sure where to start? We offer onsite consultations to measure up and design a Corten edging plan that suits your landscape.", 
        icon: CheckIcon,
        image: "/images/hero.webp",
        link: "/services/garden-design-consult"
    }
];

const locations = ["Mornington", "Mt Eliza", "Portsea", "Sorrento", "Blairgowrie", "Rye", "Rosebud", "Dromana", "Balnarring", "Flinders"];

const schema = JSON.stringify({
  "@context": "https://schema.org",
  "@graph": [
    {
      "@type": "GardenStore",
      "name": "Garden Edge",
      "image": "https://www.localrankadvantage.shop/images/hero.webp",
      "@id": "https://www.localrankadvantage.shop/#organization",
      "url": "https://www.localrankadvantage.shop",
      "email": "info@localrankadvantage.shop",
      "priceRange": "$$",
      "address": {
        "@type": "PostalAddress",
        "addressLocality": "Mornington",
        "addressRegion": "VIC",
        "postalCode": "3931",
        "addressCountry": "AU"
      },
      "geo": {
        "@type": "GeoCoordinates",
        "latitude": -38.2197,
        "longitude": 145.0345
      },
      "areaServed": {
        "@type": "GeoCircle",
        "geoMidpoint": {
          "@type": "GeoCoordinates",
          "latitude": -38.2197,
          "longitude": 145.0345
        },
        "geoRadius": "40000"
      }
    },
    {
      "@type": "FAQPage",
      "mainEntity": [
        {
          "@type": "Question",
          "name": "Does Corten steel rust stain my paving?",
          "acceptedAnswer": {
            "@type": "Answer",
            "text": "During the initial weathering period (run-off phase), some rust staining can occur on porous surfaces. We recommend installing on a garden bed edge or using a pre-weathered sealant if adjacent to expensive stone."
          }
        },
        {
          "@type": "Question",
          "name": "How long does Corten edging last?",
          "acceptedAnswer": {
            "@type": "Answer",
            "text": "Corten steel is designed to last decades. The rust layer forms a protective barrier that slows down further corrosion, unlike standard mild steel which rusts through quickly."
          }
        },
        {
          "@type": "Question",
          "name": "Do you need concrete for installation?",
          "acceptedAnswer": {
            "@type": "Answer",
            "text": "Not usually. Our system uses deep heavy-duty steel pegs that interlock with the edging, providing immense stability without the mess and expense of concrete footings."
          }
        },
        {
          "@type": "Question",
          "name": "Can you curve the edging onsite?",
          "acceptedAnswer": {
            "@type": "Answer",
            "text": "Yes! That is our specialty. We supply straight lengths and mechanically curve them onsite to flow perfectly with your garden design. No pre-fabrication required."
          }
        }
      ]
    }
  ]
});
---

<Layout title="Garden Edge | Corten Steel Garden Edging Mornington Peninsula" description="Premier Corten steel garden edging supply and installation on the Mornington Peninsula. Durable, rust-finish edging for coastal gardens. Call info@localrankadvantage.shop." schema={schema}>

    <!-- Background Texture -->
    <div class="fixed inset-0 pointer-events-none opacity-[0.4] z-[100] bg-[url('https://www.transparenttextures.com/patterns/concrete-wall.png')] mix-blend-multiply"></div>

    <main class="flex min-h-screen flex-col items-center font-sans text-slate-800 bg-slate-50 selection:bg-orange-500 selection:text-white">
        
        {/* Hero Section */}
        <section class="relative w-full pt-40 pb-20 lg:pt-60 lg:pb-40 px-6 overflow-hidden">
            <div class="max-w-7xl mx-auto grid lg:grid-cols-2 gap-16 items-center">
                <div class="relative z-10">
                    <div class="inline-flex items-center gap-2 px-4 py-2 bg-amber-50 text-amber-900 rounded-full text-xs font-bold uppercase tracking-wider mb-8 border border-amber-100">
                        <span class="w-2 h-2 rounded-full bg-orange-600 animate-pulse"></span> Serving Mornington Peninsula & Bayside
                    </div>
                    <h1 class="text-5xl lg:text-7xl font-extrabold text-slate-900 leading-[1.1] mb-8 tracking-tight">
                        <span class="text-transparent bg-clip-text bg-gradient-to-r from-amber-700 to-orange-900">Garden Edge.</span> <br />
                        Corten Steel Garden Edging <span class="sr-only">Mornington Peninsula</span>.
                    </h1>
                    <p class="text-slate-600 text-lg lg:text-xl mb-10 max-w-lg leading-relaxed">
                        Transform your landscape with <strong class="text-amber-800">Corten Steel Edging</strong>. We supply and install premium, long-lasting garden edging that defines your space with a timeless rust finish.
                    </p>
                    <div class="flex flex-col sm:flex-row gap-4">
                        <a href="mailto:info@localrankadvantage.shop" class="px-8 py-4 bg-slate-900 text-white rounded-xl font-bold text-lg hover:bg-amber-700 transition-colors shadow-xl flex items-center justify-center gap-2">
                            Request Quote
                        </a>
                        <div class="px-8 py-4 bg-white border border-slate-200 text-slate-600 rounded-xl font-medium flex items-center justify-center gap-2 shadow-sm">
                            <div class="w-5 h-5 text-amber-600" set:html={CheckIcon} /> Lifetime Guarantee
                        </div>
                    </div>
                </div>

                <div class="relative">
                    <div class="absolute -inset-4 bg-amber-500/10 rounded-[40px] rotate-3 blur-2xl"></div>
                    <div class="relative rounded-[32px] overflow-hidden shadow-2xl border-4 border-white aspect-[4/3]">
                        <img src="/images/hero.webp" alt="Corten Steel Garden Edging Mornington Peninsula" class="w-full h-full object-cover transform hover:scale-105 transition-transform duration-700" />
                        
                        {/* Guarantee Badge */}
                        <div class="absolute bottom-6 left-6 bg-white/95 backdrop-blur p-6 rounded-2xl shadow-xl border border-amber-100 max-w-xs">
                            <div class="text-amber-800 font-black text-sm uppercase tracking-wider mb-1">The Genuine Article</div>
                            <div class="font-bold text-slate-900 text-lg leading-tight">"High Grade Corten. Not Imitation Rust."</div>
                        </div>
                    </div>
                </div>
            </div>
        </section>

        {/* Video Section */}
        <ExplainerVideo />

        {/* Services Section */}
        <section id="services" class="w-full py-32 bg-white relative">
            <div class="max-w-7xl mx-auto px-6">
                <div class="text-center mb-24">
                    <h2 class="text-3xl lg:text-5xl font-bold text-slate-900 mb-6">Garden Edging Solutions</h2>
                    <p class="text-slate-500 text-lg max-w-2xl mx-auto">Specializing in high-quality Corten steel edging for DIY supply or professional installation.</p>
                </div>

                <div class="grid md:grid-cols-2 lg:grid-cols-4 gap-8">
                    {services.map(s => (
                        <a href={s.link} class="group relative bg-slate-50 rounded-3xl overflow-hidden hover:shadow-2xl transition-all duration-500 border border-slate-100 block">
                            <div class="h-64 overflow-hidden relative">
                                <img src={s.image} alt={s.title} class="w-full h-full object-cover group-hover:scale-110 transition-transform duration-700" />
                                <div class="absolute inset-0 bg-gradient-to-t from-slate-900/60 to-transparent"></div>
                            </div>
                            <div class="p-8 relative">
                                <div class="absolute -top-10 right-8 w-16 h-16 bg-white rounded-2xl flex items-center justify-center text-orange-600 shadow-lg group-hover:bg-orange-600 group-hover:text-white transition-colors duration-300">
                                    <div class="w-8 h-8" set:html={s.icon} />
                                </div>
                                <h3 class="text-xl font-bold text-slate-900 mb-4 pr-12">{s.title}</h3>
                                <p class="text-slate-500 leading-relaxed text-sm mb-6">{s.description}</p>
                                <div class="text-orange-600 font-bold text-xs uppercase tracking-widest group-hover:translate-x-2 transition-transform">Get Quote â†’</div>
                            </div>
                        </a>
                    ))}
                </div>
            </div>
        </section>

        {/* Garden Design Guide & Benefits Section */}
        <section class="w-full py-32 bg-amber-50 relative border-t border-amber-100">
            <div class="max-w-7xl mx-auto px-6 grid lg:grid-cols-2 gap-16">
                
                {/* Design Tips */}
                <div class="space-y-8">
                    <span class="text-amber-600 font-bold tracking-widest uppercase text-xs">Expert Advice</span>
                    <h2 class="text-4xl font-bold text-slate-900 leading-tight">Garden Design Tips for the <br/><span class="text-amber-700">Mornington Peninsula</span></h2>
                    <p class="text-slate-600 text-lg leading-relaxed">
                        Creating a stunning coastal landscape requires balancing robust materials with soft, flowing organic lines. Here is how professional landscapers use <strong>corten garden edging</strong> to achieve that high-end look.
                    </p>

                    <div class="space-y-6 mt-8">
                        <div class="flex gap-4">
                            <div class="w-12 h-12 bg-white rounded-xl shadow-md border border-amber-100 flex items-center justify-center text-amber-600 shrink-0 font-bold">1</div>
                            <div>
                                <h3 class="text-xl font-bold text-slate-800 mb-2">Create Flow with Curves</h3>
                                <p class="text-slate-600 leading-relaxed">Avoid rigid squares. Use <strong>corten steel garden edge</strong> strips to create sweeping curves that guide the eye through the garden, mimicking the rolling waves of our coastline.</p>
                            </div>
                        </div>
                        <div class="flex gap-4">
                            <div class="w-12 h-12 bg-white rounded-xl shadow-md border border-amber-100 flex items-center justify-center text-amber-600 shrink-0 font-bold">2</div>
                            <div>
                                <h3 class="text-xl font-bold text-slate-800 mb-2">Layer Heights for Depth</h3>
                                <p class="text-slate-600 leading-relaxed">Don't keep everything flat. Use 150mm high <strong>garden edging corten steel</strong> to raise garden beds slightly, separating the lawn from the mulch and adding visual weight to your planting layers.</p>
                            </div>
                        </div>
                    </div>
                </div>

                {/* Benefits */}
                <div class="bg-white p-10 rounded-[2.5rem] shadow-xl border border-slate-100 relative overflow-hidden">
                    <div class="absolute top-0 right-0 w-32 h-32 bg-amber-100 rounded-bl-full opacity-50"></div>
                    
                    <h2 class="text-3xl font-bold text-slate-900 mb-8 relative z-10">Why Choose Corten Steel?</h2>
                    
                    <div class="space-y-8 relative z-10">
                        <div>
                            <h3 class="text-lg font-bold text-slate-800 mb-2 flex items-center gap-2">
                                <span class="w-2 h-2 bg-amber-500 rounded-full"></span>
                                The "Living" Rust Finish
                            </h3>
                            <p class="text-slate-600 text-sm leading-relaxed">
                                Unlike painted metal that chips, <strong>corten steel rust garden edging</strong> develops a protective patina. This earthy, textured finish gets better with age and never requires maintenance.
                            </p>
                        </div>
                        
                        <div>
                            <h3 class="text-lg font-bold text-slate-800 mb-2 flex items-center gap-2">
                                <span class="w-2 h-2 bg-amber-500 rounded-full"></span>
                                Structural Strength
                            </h3>
                            <p class="text-slate-600 text-sm leading-relaxed">
                                It is not just decorative. <strong>Corten steel garden edging melbourne</strong> grade is incredibly strong, capable of retaining soil and resisting whipper snipper damage that destroys plastic or timber edging.
                            </p>
                        </div>

                         <div>
                            <h3 class="text-lg font-bold text-slate-800 mb-2 flex items-center gap-2">
                                <span class="w-2 h-2 bg-amber-500 rounded-full"></span>
                                Termite & Weather Proof
                            </h3>
                            <p class="text-slate-600 text-sm leading-relaxed">
                                Timber rots and attracts termites. <strong>Corten garden edge</strong> is impervious to insects, rot, and the harsh sun, making it a "plant and forget" solution for decades.
                            </p>
                        </div>
                    </div>
                </div>

            </div>
        </section>
        <section class="w-full py-32 bg-slate-900 text-slate-300 px-6">
            <div class="max-w-4xl mx-auto">
                <div class="mb-16">
                     <span class="text-amber-500 font-bold tracking-widest uppercase text-xs">Technical Specifications</span>
                     <h2 class="text-4xl lg:text-5xl font-bold text-white mt-4 mb-8">Designed for the <span class="text-amber-500">Coast</span></h2>
                     <p class="text-lg text-slate-400">Why Corten Steel is the superior choice for Mornington Peninsula gardens.</p>
                </div>

                <div class="grid gap-6 mb-24">
                    <div class="bg-slate-800/50 p-8 rounded-2xl border border-slate-700 hover:border-amber-500/50 transition-colors">
                        <h4 class="text-white font-bold text-lg mb-2">Salt Spray Resistance</h4>
                        <p class="text-sm leading-relaxed">Unlike mild steel which rots in coastal air, Corten develops a stable rust-like appearance. This patina acts as a protective coating, preventing further corrosion and making it perfect for Bayside and Peninsula homes.</p>
                    </div>
                    <div class="bg-slate-800/50 p-8 rounded-2xl border border-slate-700 hover:border-amber-500/50 transition-colors">
                        <h4 class="text-white font-bold text-lg mb-2">Native Garden Synergy</h4>
                        <p class="text-sm leading-relaxed">The earthy, ochre tones of rusted steel provide a stunning contrast to the silver-greens of Coastal Rosemary, Banksias, and native grasses found throughout our region.</p>
                    </div>
                     <div class="bg-slate-800/50 p-8 rounded-2xl border border-slate-700 hover:border-amber-500/50 transition-colors">
                        <h4 class="text-white font-bold text-lg mb-2">Zero Maintenance</h4>
                        <p class="text-sm leading-relaxed">Once installed, Corten edging requires no painting, oiling, or intricate care. It simply gets better with age, blending seamlessly into the landscape.</p>
                    </div>
                </div>

                {/* FAQ Expansion */}
                <div class="border-t border-slate-800 pt-16">
                    <h3 class="text-3xl font-bold text-white mb-12">Common Questions</h3>
                    <div class="space-y-8">
                        <div>
                            <h4 class="text-xl font-bold text-amber-400 mb-2">Where do you service?</h4>
                            <p class="leading-relaxed">We service the entire Mornington Peninsula and Bayside areas, from Frankston down to Portsea, and across to Western Port (Balnarring, Flinders).</p>
                        </div>
                        <div>
                            <h4 class="text-xl font-bold text-amber-400 mb-2">Do you supply to the public?</h4>
                            <p class="leading-relaxed">Yes. We offer "Supply Only" packages for DIY enthusiasts. We can deliver the steel strips, pegs, and joiners directly to your door.</p>
                        </div>
                        <div>
                            <h4 class="text-xl font-bold text-amber-400 mb-2">How deep does the edging go?</h4>
                            <p class="leading-relaxed">Standard edging is 100mm or 150mm high. We verify your soil depth before installation. Approximately 1/3 of the edge is usually buried for stability, but this varies by design.</p>
                        </div>
                        <div>
                            <h4 class="text-xl font-bold text-amber-400 mb-2">Can it be used for retaining?</h4>
                            <p class="leading-relaxed">It is primarily for separation, but can retain small heights (up to 200mm). For higher retaining walls, we recommend heavier gauge steel or different engineering.</p>
                        </div>
                    </div>
                </div>
            </div>
        </section>

        {/* Locations Ticker */}
        <div class="w-full py-12 bg-sky-900 overflow-hidden relative">
            <div class="flex gap-16 whitespace-nowrap animate-marquee opacity-80">
                {[...locations, ...locations, ...locations].map(loc => (
                    <span class="text-sky-100 font-bold text-2xl uppercase tracking-widest flex items-center gap-8">
                        {loc} <div class="w-2 h-2 bg-white/30 rounded-full"></div>
                    </span>
                ))}
            </div>
        </div>

    </main>

    <style is:global>
        @keyframes marquee {
            0% { transform: translateX(0); }
            100% { transform: translateX(-50%); }
        }
        .animate-marquee {
            animation: marquee 40s linear infinite;
        }
    </style>
</Layout>
