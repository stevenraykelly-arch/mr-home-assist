    { params: { location: 'burwood' }, props: { name: 'Burwood', post_code: '3125' } },
    { params: { location: 'box-hill' }, props: { name: 'Box Hill', post_code: '3128' } },
    { params: { location: 'blackburn' }, props: { name: 'Blackburn', post_code: '3130' } },
    { params: { location: 'nunawading' }, props: { name: 'Nunawading', post_code: '3131' } },
    { params: { location: 'doncaster' }, props: { name: 'Doncaster', post_code: '3108' } },
    { params: { location: 'templestowe' }, props: { name: 'Templestowe', post_code: '3106' } },
