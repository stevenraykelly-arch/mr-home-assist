---
import Layout from '../../layouts/Layout.astro';

export function getStaticPaths() {
  const locations = [
    { params: { location: 'mornington' }, props: { name: 'Mornington', post_code: '3931' } },
    { params: { location: 'mt-eliza' }, props: { name: 'Mt Eliza', post_code: '3930' } },
    { params: { location: 'portsea' }, props: { name: 'Portsea', post_code: '3944' } },
    { params: { location: 'sorrento' }, props: { name: 'Sorrento', post_code: '3943' } },
    { params: { location: 'rye' }, props: { name: 'Rye', post_code: '3941' } },
    { params: { location: 'rosebud' }, props: { name: 'Rosebud', post_code: '3939' } },
    { params: { location: 'dromana' }, props: { name: 'Dromana', post_code: '3936' } },
    { params: { location: 'balnarring' }, props: { name: 'Balnarring', post_code: '3926' } },
    { params: { location: 'flinders' }, props: { name: 'Flinders', post_code: '3929' } },
  ];
  return locations;
}

const { location } = Astro.params;
const { name, post_code } = Astro.props;

const title = `Corten Steel Edging ${name} - Supply & Install`;
const description = `Premium Corten steel garden edging in ${name} ${post_code}. We supply and install rust-finish edging for coastal gardens in ${name}.`;
---

<Layout title={title} description={description}>
    <main>
        {/* Dynamic Hero */}
        <section class="relative bg-slate-900 py-32 lg:py-48 overflow-hidden">
            <div class="absolute inset-0 z-0">
                <div class="absolute inset-0 bg-gradient-to-r from-slate-900 via-slate-900/95 to-slate-900/40 z-10"></div>
                {/* Reusing hero image but focusing on local relevance */}
                <img src="/images/hero.webp" alt={`Garden edging in ${name}`} class="w-full h-full object-cover opacity-50" />
            </div>
            
            <div class="relative z-20 max-w-7xl mx-auto px-6">
                <span class="text-amber-500 font-bold tracking-widest uppercase mb-4 block">Service Area: {post_code}</span>
                <h1 class="text-5xl lg:text-7xl font-extrabold text-white mb-8 tracking-tight">
                    Garden Edging <span class="text-transparent bg-clip-text bg-gradient-to-r from-amber-400 to-amber-600">{name}</span>
                </h1>
                <p class="text-xl text-slate-300 max-w-2xl leading-relaxed mb-10">
                    We are the local landscape edging experts for <strong>{name}</strong>. Create timeless, rusty garden borders that withstand the {name} coastal salt air. 
                </p>
                <div class="flex flex-col sm:flex-row gap-4">
                    <a href="#quote" class="px-8 py-4 bg-amber-600 hover:bg-amber-700 text-white font-bold rounded-lg transition-all shadow-lg shadow-amber-900/20 text-center">
                        Get a {name} Quote
                    </a>
                </div>
            </div>
        </section>

        {/* Local Content */}
        <section class="py-24 bg-white">
            <div class="max-w-7xl mx-auto px-6">
                <div class="grid md:grid-cols-2 gap-16 items-center">
                    <div>
                        <h2 class="text-3xl font-bold text-slate-900 mb-6">Why {name} Gardens Need Corten</h2>
                        <div class="space-y-6 text-slate-600 leading-relaxed">
                            <p>
                                Owning property in {name} means dealing with sandy soils and salt exposure. Timber rots and plastic cracks. Corten steel is the only edging material that improves with age in our coastal climate.
                            </p>
                            <p>
                                We realize many {name} properties feature native coastal plantings. The rustic orange of Corten steel provides the perfect backdrop for these green-grey palettes.
                            </p>
                            <ul class="space-y-3 mt-8">
                                <li class="flex items-center gap-3">
                                    <div class="w-2 h-2 rounded-full bg-amber-500"></div>
                                    <span>Delivered to {name} Weekly</span>
                                </li>
                                <li class="flex items-center gap-3">
                                    <div class="w-2 h-2 rounded-full bg-amber-500"></div>
                                    <span>Installation Network in {name} area</span>
                                </li>
                                <li class="flex items-center gap-3">
                                    <div class="w-2 h-2 rounded-full bg-amber-500"></div>
                                    <span>Suitable for {name} Soil Conditions</span>
                                </li>
                            </ul>
                        </div>
                    </div>
                    <div class="bg-slate-50 p-8 rounded-2xl border border-slate-100">
                        <h3 class="font-bold text-xl text-slate-900 mb-6">Our Services in {name}</h3>
                        <div class="grid gap-4">
                            <a href="/services/supply-only" class="flex items-center justify-between p-4 bg-white rounded-xl shadow-sm hover:shadow-md transition-all group">
                                <span class="font-medium text-slate-700 group-hover:text-amber-600">Supply Only (DIY)</span>
                                <svg xmlns="http://www.w3.org/2000/svg" class="w-5 h-5 text-slate-400 group-hover:text-amber-500" fill="none" viewBox="0 0 24 24" stroke="currentColor"><path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 5l7 7-7 7" /></svg>
                            </a>
                            <a href="/services/supply-and-install" class="flex items-center justify-between p-4 bg-white rounded-xl shadow-sm hover:shadow-md transition-all group">
                                <span class="font-medium text-slate-700 group-hover:text-amber-600">Full Installation</span>
                                <svg xmlns="http://www.w3.org/2000/svg" class="w-5 h-5 text-slate-400 group-hover:text-amber-500" fill="none" viewBox="0 0 24 24" stroke="currentColor"><path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 5l7 7-7 7" /></svg>
                            </a>
                             <a href="/services/custom-curved-edging" class="flex items-center justify-between p-4 bg-white rounded-xl shadow-sm hover:shadow-md transition-all group">
                                <span class="font-medium text-slate-700 group-hover:text-amber-600">Custom Curving</span>
                                <svg xmlns="http://www.w3.org/2000/svg" class="w-5 h-5 text-slate-400 group-hover:text-amber-500" fill="none" viewBox="0 0 24 24" stroke="currentColor"><path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 5l7 7-7 7" /></svg>
                            </a>
                        </div>
                    </div>
                </div>
            </div>
        </section>
    </main>
</Layout>
