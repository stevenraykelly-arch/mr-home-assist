---
import Layout from '../../layouts/Layout.astro';
import SEO from '../../components/SEO.astro';

export function getStaticPaths() {
  const locations = [
    { params: { location: 'glen-waverley' }, props: { name: 'Glen Waverley', post_code: '3150' } },
