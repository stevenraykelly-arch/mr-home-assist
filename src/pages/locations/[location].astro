const { location } = Astro.params;
const { name, post_code } = Astro.props;

const title = `Msg Retaining Walls ${name} | Retaining Walls Melbourne`;
const description = `Professional retaining wall construction and repair in ${name} ${post_code}. Concrete sleepers, timber walls and engineering for the ${name} area.`;
---

<Layout title={title} description={description}>
    <main>
        <section class="bg-slate-900 py-32 text-center text-white">
            <h1 class="text-5xl font-bold mb-6">Serving {name}</h1>
            <p class="text-xl max-w-2xl mx-auto">We are proud to offer our premium services to residents and businesses in {name} ({post_code}).</p>
        </section>
        
        <section class="py-20 px-6 max-w-7xl mx-auto">
            <h2 class="text-3xl font-bold mb-8 text-slate-900">Retaining Walls in {name}</h2>
            <p class="mb-6">We understand the specific soil conditions in {name}, providing engineered solutions that last. Whether you need a new concrete sleeper wall or repairs to an existing timber structure, we are your local experts.</p>
            
            <div class="mt-12 p-8 bg-amber-50 rounded-2xl border border-amber-100">
                <h3 class="text-xl font-bold text-slate-800 mb-4">Get a Quote for your {name} project</h3>
                <p class="mb-6">Contact us today for a free site assessment and measure up in {name} {post_code}.</p>
                <a href="#contact" class="inline-block px-8 py-4 bg-slate-900 text-white rounded-xl font-bold hover:bg-slate-800 transition-colors">Request Consultation</a>
            </div>
        </section>
    </main>
</Layout>
