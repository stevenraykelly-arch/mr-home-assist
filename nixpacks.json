{
    "phases": {
        "setup": {
            "nixPkgs": [
                "nodejs_20",
                "npm-9_x"
            ]
        },
        "install": {
            "cmds": [
                "npm install"
            ]
        },
        "build": {
            "cmds": [
                "npm run build"
            ]
        },
        "start": {
            "cmd": "npx -y serve dist -p 3000 --single"
        }
    }
}